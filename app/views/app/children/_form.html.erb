<%= form_with(model: app_child, local: true) do |form| %>
  <% if app_child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(app_child.errors.count, "error") %> prohibited this app_child from being saved:</h2>

      <ul>
      <% app_child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true%>
  </div>

  <div class="field">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :district %>
    <%= form.text_field :district, class: "form-control",required: true %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.phone_field :phone, class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control", required: false%>
  </div>

  <div class="field">
    <%= form.label :location_description %>
    <%= form.text_field :location_description,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :post_code %>
    <%= form.number_field :post_code, class: "form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :president_id %>
    <%= form.number_field :president_id, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :vice_president_id %>
    <%= form.number_field :vice_president_id, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :secretary_id %>
    <%= form.number_field :secretary_id, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :manager_id %>
    <%= form.number_field :manager_id, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= form.label :avatar, "Image en avant" %>
    <%= form.file_field :avatar, class: "form-control", required: false %>
    <%= form.hidden_field :avatar_cache %>
  </div>

  <div class="mt-2 ">
    <%= image_tag app_child.avatar.thumb.url, alt: 'thumbnail' if app_child.avatar.present? %>
  </div>

  <div class="text-right">
    <%= form.submit 'Sauvegarder', class: "btn btn-primary btn-sm mt-3" %>
  </div>
<% end %>
