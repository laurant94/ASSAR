<div class="card">
  <div class="card-header">
    <h3>Liste des Groupes</h3>
  </div>
  <div class="card-body">
    <div class="row text-right">
      <div class="col-12">
        <%= link_to 'Nouveau groupe', new_app_group_path, data: {turbolinks: false}, class: 'btn btn-primary btn-sm text-white mb-2' %>
      </div>
    </div>
    <table id="faithfulList" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nom</th>
          <th>Acronyme</th>
          <th>Description</th>
          <th>Membres</th>
          <th>Administrateur</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.id %></td>
            <td><%= group.name %></td>
            <td><%= group.acronym %></td>
            <td><%= group.description %></td>
            <td><%= group.faithfuls.size %></td>
            <td><%= group.manager.present? ? group.manager.fullname : "Aucun" %></td>
            <td> 
              <%= link_to content_tag('i', 'Voir', class: "fa fa-eye"), app_group_path(group), class: 'btn btn-success btn-xs text-white mb-2' %>
              <%= link_to content_tag('i', 'Editer', class: "fa fa-pen"), edit_app_group_path(group), class: 'btn btn-primary btn-xs text-white mb-2' %>
              <%= link_to content_tag('i', 'Supprimer', class: "fa fa-trash"), app_group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs text-white mb-2' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



<% content_for :page_name, 'view.groups' %>
