  <script src="<%=root_url%>plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
  <script src="<%=root_url%>plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
  <script src="<%=root_url%>plugins/jszip/jszip.min.js"></script>
  <script src="<%=root_url%>plugins/pdfmake/pdfmake.min.js"></script>
  <script src="<%=root_url%>plugins/pdfmake/vfs_fonts.js"></script>
