  <script src="<%=root_url%>plugins/datatables-buttons/js/buttons.print.min.js"></script>
  <script src="<%=root_url%>plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
  <script>
    $('#faithfulList').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  </script>
<% end %>
