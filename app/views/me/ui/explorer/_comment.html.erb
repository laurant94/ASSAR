<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header text-muted">
        <h5>Commentaires</h5>
      </div>
      <div class="card-body">

        <!-- Comments -->
        <% post.comments.liked.each do |comment| %>
          <!-- comment -->
          <div class="card card-widget ">
            <div class="card-header">
              <div class="user-block">
                <img class="img-circle" src="<%= comment.faithful.present? and comment.faithful.avatar.present? ? 
          comment.faithful.avatar.mini.url : asset_url('/templates/adminLte/img/event.jpeg') %>" alt="User Image">
                <span class="username"><a href="#"> <%= comment.faithful.fullname %> </a></span>
                <span class="description"> <%= "#{str_time(comment.created_at)}" %> </span>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row">
                <div class="col-10 offset-1">
                  <%= markdown( comment.content ) %>
                </div>
              </div>
              
            </div>
          
          </div>     
        <% end %>

        <!--  new comment -->
        <div class="offset-1 col-10">
          <div class="card elevation-0">
            <div class="card-header">
              <h6>Ecrire un commentaire</h6>
            </div>
            <div class="card-body">
              <%= form_for :comment, html: { multipart: true, method: "patch" }, url: comment_me_post_path(post)  do |f| %>
                <%= f.text_area :content, rows: 6, class: 'form-control' %>    
                <div class="row">
                  <div class="col-12 text-right">
                    <%= f.submit 'Commenter', class: "btn btn-primary btn-sm mt-1"%>
                  </div>
                </div>      
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
